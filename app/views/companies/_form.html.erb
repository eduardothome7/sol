<%= form_with model: @company, local: true, html: { multipart: true } do |form| %>
  <% if company.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:
      </h4>
      <ul class="mb-0">
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Nome Fantasia *", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :picture_url, "Logo *", class: "form-label" %>
    <%= form.file_field :picture_url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cnpj, "CNPJ *", class: "form-label" %>
    <%= form.text_field :cnpj, class: "form-control" %>
  </div>

  <div class="mb-3">
    <% if @company.persisted? %>
      <%= form.submit "Salvar alterações", class: "btn btn-primary float-end" %>
    <% else %>
      <%= form.submit "Salvar", class: "btn btn-primary w-100" %>
    <% end %>
  </div>

<% end %>
