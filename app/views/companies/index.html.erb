<% content_for :title, "Lojas" %>

<!-- Breadcrumb simples -->
<nav aria-label="breadcrumb" class="mb-3">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Lojas</li>
  </ol>
</nav>

<%= link_to new_company_path, class: "btn btn-light float-end d-flex align-items-center mb-3" do %>
  <i class="fa-solid fa-store me-2"></i>
  Cadastrar loja
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>CNPJ</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.cnpj %></td>
        <td>
          <%= link_to company, target: "_blank", class: "btn btn-sm btn-outline-primary me-1" do %>
            <i class="fa-solid fa-globe"></i>
            Ver Site
          <% end %>
          <%= link_to "Ver", company, class: "btn btn-sm btn-outline-primary me-1" %>
          <%= link_to "Editar", edit_company_path(company), class: "btn btn-sm btn-outline-secondary me-1" %>
          <%= link_to "Excluir", company, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

