<% content_for :title, "Sites" %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Sites</li>
  </ol>
</nav>

<div class="d-flex justify-content-end">
  <%= link_to "Cadastrar site", new_admin_site_path, class: "btn btn-light" %>
</div>

<table class="table table-striped table-hover align-middle">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Logo</th>
      <th scope="col">Título</th>
      <th scope="col">CNPJ</th>
      <th scope="col" class="text-end">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @admin_sites.each do |admin_site| %>
      <tr>
        <td><%= admin_site.id %></td>
        <td width="80">
          <% if admin_site.logo.attached? %>
            <%= image_tag admin_site.logo, class: "img-thumbnail", style: "height: 50px;" %>
          <% else %>
            <span class="text-muted">Sem logo</span>
          <% end %>
        </td>

        <td><%= admin_site.title %></td>
        <td><%= admin_site.cnpj %></td>

        <td class="text-end">
          <%= link_to "Ver", admin_site, class: "btn btn-sm btn-primary" %>
          <%= link_to "Editar", edit_admin_site_path(admin_site), class: "btn btn-sm btn-secondary" %>
          <%= link_to "Apagar", admin_site, data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
